{
  "name": "koa-start-kit",
  "version": "0.0.1",
  "description": "Koa 2 demo.",
  "main": "index.js",
  "config": {
    "port": 3001,
    "clientPort": 13001
  },
  "scripts": {
    "test": "eslint . --ext .js --ext .jsx && jest",
    "dev": "npm run dev:client & npm run dev:serve",
    "dev:client": "webpack-dev-server --history-api-fallback --inline --progress --config webpack.dev.config.js",
    "dev:serve": "nodemon ./server/index.js",
    "build": "npm run clean & npm run build:server && npm run build:client",
    "build:client": "webpack --progress --config webpack.dist.config.js",
    "build:server": "babel ./server -d dist --presets es2015,stage-2 --copy-files --minified",
    "clean": "rm -rf ./dist"
  },
  "keywords": [
    "koa@2.0.0"
  ],
  "author": "zhouziyao",
  "license": "ISC",
  "dependencies": {
    "css-loader": "^0.28.2",
    "ejs": "^2.5.5",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.7.0",
    "ip": "^1.1.4",
    "jest": "^18.1.0",
    "koa": "^2.0.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.2.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "normalize.css": "^5.0.0",
    "postcss": "^6.0.1",
    "postcss-cssnext": "^2.11.0",
    "postcss-loader": "^2.0.5",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "style-loader": "^0.18.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "nodemon": "^1.11.0"
  },
  "repository": "git@github.com:chou777/koa2-web-app.git"
}
